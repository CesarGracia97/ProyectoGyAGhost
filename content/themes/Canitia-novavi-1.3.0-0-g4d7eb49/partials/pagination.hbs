<nav aria-label="Page navigation">
    <ul class="pagination pure-g">
      <li class="pure-u-1-3">
        {{#if prev}} 
          <a href="{{page_url prev}}" aria-label="Previous">
            <i class="fas fa-chevron-left"></i>
          </a>       
        {{/if}}
      </li>

      <li class="active pure-u-1-3">{{page}}</li>
      <li class="pure-u-1-3">
        {{#if next}}
          <a href="{{page_url next}}" aria-label="Next">
            <i class="fas fa-chevron-right"></i>
          </a>
        {{/if}}
      </li>
  </ul>
</nav>